generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String  @unique
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? // @db.Text
    access_token      String? // @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? // @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    banner        String?
    bio           String?
    account       Account?
    sessions      Session[]
    twats         Twat[]
    likes         Like[]
    followers     User[]    @relation(name: "Followers")
    following     User[]    @relation(name: "Followers")
    createdAt     DateTime  @default(now())
    xp            Int       @default(0)
    level         Int       @default(1)
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Twat {
    id           String   @id @unique @default(uuid())
    content      String
    createdAt    DateTime @default(now())
    author       User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
    authorId     String
    attachment   String?
    embeddedTwat Twat?    @relation(name: "repost", fields: [retwatId], references: [id], onDelete: Cascade)
    retwats      Twat[]   @relation(name: "repost")
    retwatId     String?
    likes        Like[]
}

model Like {
    userId String
    twatId String
    user   User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
    twat   Twat?  @relation(fields: [twatId], references: [id], onDelete: Cascade)

    @@id([userId, twatId])
}
